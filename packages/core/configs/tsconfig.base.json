// Common compilation settings that can be used regardless of the module format
// Reference: https://snyk.io/blog/best-practices-create-modern-npm-package/
{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "../src/**/*"
    ]
}